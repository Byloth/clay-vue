{
  "extends": "./_base.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "declaration": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": { "@/*": ["./src/*"] },
    "types": ["vite/client"]
  },
  "include": [
    "../src/**/*",
    "../src/**/*.json",
    "../src/**/*.vue",

    "../.storybook/**/*",
    "../.storybook/**/*.json",
    "../.storybook/**/*.vue"
  ]
}
